{
  "name": "@bkonkle/api-on-vercel",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "tsx": "^4.19.1",
    "turbo": "^2.3.4",
    "typescript": "^5",
    "xo": "^0.59.3"
  },
  "packageManager": "pnpm@9.15.5",
  "engines": {
    "node": ">=22"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "import/extensions": "off",
      "n/file-extension-in-import": "off",
      "unicorn/filename-case": "off",
      "unicorn/prevent-abbreviations": "off",
      "@typescript-eslint/naming-convention": "off"
    }
  }
}
